# PostgreSQL Configuration
POSTGRES_PASSWORD=pllm_secure_password_change_me

# Redis Configuration
REDIS_PASSWORD=redis_secure_password_change_me

# Master Key for Admin Operations
MASTER_KEY=sk-master-change-this-in-production-minimum-32-chars

# JWT Configuration
JWT_SECRET=change-this-secret-in-production-minimum-32-chars

# GitHub OAuth (Optional - for SSO)
# Create OAuth App at: https://github.com/settings/applications/new
# Homepage URL: http://localhost:3000
# Authorization callback URL: http://localhost:5556/dex/callback
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth (Optional - for SSO)
# Create OAuth 2.0 Client ID at: https://console.cloud.google.com/apis/credentials
# Authorized redirect URIs: http://localhost:5556/dex/callback
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# LDAP Configuration (Optional - for enterprise SSO)
LDAP_ADMIN_PASSWORD=ldap-admin-password

# LLM Provider API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Feature Flags
DB_AUTO_SEED=true  # Set to false to disable automatic database seeding