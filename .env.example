# PLLM Environment Variables Example
# Copy this file to .env and update the values

# Master Key for bootstrap admin access (REQUIRED for initial setup)
# Use this to authenticate as admin before Dex users are configured
PLLM_MASTER_KEY=sk-master-dev-key-change-in-production

# OpenAI API Key (REQUIRED for OpenAI models)
OPENAI_API_KEY=sk-your-openai-api-key

# JWT Secret for session tokens (REQUIRED)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this

# Database Configuration (defaults for Docker Compose)
DATABASE_URL=postgres://pllm:pllm@localhost:5432/pllm?sslmode=disable

# Redis Configuration (defaults for Docker Compose)
REDIS_URL=redis://localhost:6379

# Admin User (for initial setup - deprecated, use master key instead)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123!
ADMIN_EMAIL=admin@pllm.io

# Optional: GitHub OAuth for Dex
GITHUB_KEY=your-github-oauth-app-client-id
GITHUB_SECRET=your-github-oauth-app-client-secret

# Optional: Google OAuth for Dex
GOOGLE_CLIENT_ID_PLACEHOLDER=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET_PLACEHOLDER=your-google-oauth-client-secret

# Optional: Microsoft/Entra ID OAuth for Dex
ENTRA_CLIENT_ID_PLACEHOLDER=your-microsoft-oauth-client-id
ENTRA_CLIENT_SECRET_PLACEHOLDER=your-microsoft-oauth-client-secret

# Optional: Other LLM Providers
ANTHROPIC_API_KEY=
AZURE_API_KEY_EAST=
GROK_API_KEY=
MISTRAL_API_KEY=
OPENROUTER_API_KEY=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
